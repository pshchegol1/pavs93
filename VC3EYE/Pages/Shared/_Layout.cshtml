@using VC3EYE.Data;
@inject LogsManager logs;
@{
    string? userName = (User.Identity.IsAuthenticated) ? User.Identity.Name : "";
    int errorLogs = logs.GetAllErrorLogs().Count;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VC3EYE</title>
    <!-- Use Bootswatch Cerulean theme for Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/spacelab/bootstrap.min.css" integrity="sha384-F1AY0h4TrtJ8OCUQYOzhcFzUTxSOxuaaJ4BeagvyQL8N9mE4hrXjdDsNx249NpEc" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <!-- Custom and site styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/scripts-bs-siderbar.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VC3EYE.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="d-flex" id="wrapper">
            <!-- Sidebar-->
            <div class="border-end bg-white" id="sidebar-wrapper">
                <div class="sidebar-heading border-bottom bg-light"><a class="list-group-item list-group-item-action text-center" asp-page="/Index"><i class="bi bi-eye-fill"></i> VC3EYE</a></div>
                <div class="list-group list-group-flush">
                   
                    <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-page="/ServicesList"><b><i class="bi bi-info-square icon-bold"></i> Services</b></a>
                    @if (User.IsInRole(SiteRoles.Administrator))
                    {
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-page="/AddService"><b><i class="bi bi-plus-square icon-bold"></i> Add Service</b></a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-page="/Logs"><b><i class="bi bi-box-arrow-in-right icon-bold"></i> Change Logs</b></a>
                        <a asp-page="/Settings" class="list-group-item list-group-item-action list-group-item-light p-3"><b><i class="bi bi-sliders2-vertical icon-bold"></i> Settings</b></a>
                        <a asp-page="/ViewUsers" class="list-group-item list-group-item-action list-group-item-light p-3"><b><i class="bi bi-people icon-bold"></i> Users</b></a>
                        <a asp-page="/Chartsofservices" class="list-group-item list-group-item-action list-group-item-light p-3"><b><i class="bi bi-people icon-bold"></i> Charts</b></a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-page="/ErrorLogs">
                            <b>
                                <i class="bi bi-exclamation-square icon-bold"></i>
                                Error Logs
                                @if (errorLogs > 0)
                                {
                                    <span class="badge bg-danger">@errorLogs</span>
                                }
                            </b>
                        </a>
                    }
                    @if (User.IsInRole(SiteRoles.User))
                    {
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-page="/AddService"><b><i class="bi bi-plus-square icon-bold"></i> Add Service</b></a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-page="/Logs"><b><i class="bi bi-box-arrow-in-right icon-bold"></i> Logs</b></a>
                    }
                </div>
            </div>
            <!-- Page content wrapper-->
            <div id="page-content-wrapper">
                <!-- Top navigation-->
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                        <button class="btn btn-primary" id="sidebarToggle"><i class="bi bi-list"></i></button>
                        <form method="post" asp-page="/Login" asp-page-handler="Logout">
                            <button class="navbar-toggler mobile-logout" type="submit" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="badge bg-dark">@userName</span> <i class="bi bi-box-arrow-left"></i></button>
                        </form>
                       
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                                <li class="nav-item active"><a class="nav-link" asp-page="/Index">Home</a></li>
                                <li class="nav-item"><a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Welcome <span class="badge badge-info">@userName</span></a></li>
                            </ul>
                            
                             <form method="post" asp-page="/Login" asp-page-handler="Logout">
                                <button type="submit" class="btn btn-outline-primary"><i class="bi bi-box-arrow-left"></i> Logout</button>
                            </form>
                        </div>
                    </div>
                </nav>
                <!-- Page content-->
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>

        <footer class="border-top footer bg-light text-muted">
            <div class="container-fluid d-flex justify-content-center footer-con">
                &copy; 2023 - VC3EYE - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    }
    else
    {
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    } 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/scripts-bs-siderbar.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>