@page
@model VC3EYE.Pages.ViewUsersModel
@{
    ViewData["Title"] = "Users";
}
<div class=" mt-3 ">
    <h1>Users</h1>
</div>
<hr />
<table class="table table-bordered table-striped" width="=100%">
    <thread>
        <div class="col-6">
        <tr>
            <th>
                UserId
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                City
            </th>
            <th>
                ProvinceState
            </th>
            <th>
                PostalCode
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>
            <th>
                UserName
            </th>         
            <th>
                Role
            </th>
        </tr>
    </thread>
    <tbody>
        @foreach (var obj in Model.user)
        {
            <tr>
                <td>@obj.UserId</td>
                <td>@obj.FirstName</td>
                <td>@obj.LastName</td>
                <td>@obj.City</td>
                <td>@obj.ProvinceState</td>
                <td>@obj.PostalCode</td>
                <td>@obj.Address</td>
                <td>@obj.Phone</td>
                <td>@obj.Email</td>              
                <td>@obj.UserName</td>
                <td>@obj.Role.Description</td>
            </tr>
        }
    </tbody>
    </div>
</table>
