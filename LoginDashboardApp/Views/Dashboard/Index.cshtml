@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <!-- Welcome Section -->
        <div class="bg-white overflow-hidden shadow rounded-lg mb-6">
            <div class="px-4 py-5 sm:p-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-2">
                    Welcome back, @Model.UserName! 👋
                </h2>
                <p class="text-gray-600">
                    You have successfully logged in to your dashboard. Last login: @Model.LoginTime.ToString("f")
                </p>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-8">
            <!-- Revenue Card -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-dollar-sign text-green-600 text-xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Number of Services</dt>
                                <dd class="text-lg font-medium text-gray-900">@Model.Stats.TotalRevenue.ToString("C")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Card -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-users text-blue-600 text-xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                                <dd class="text-lg font-medium text-gray-900">@Model.Stats.TotalUsers.ToString("N0")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Projects Card -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-project-diagram text-purple-600 text-xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Active Projects</dt>
                                <dd class="text-lg font-medium text-gray-900">@Model.Stats.ActiveProjects</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tasks Card -->
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-tasks text-yellow-600 text-xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Pending Tasks</dt>
                                <dd class="text-lg font-medium text-gray-900">@Model.Stats.PendingTasks</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Activity</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Your latest dashboard activities and updates.
                </p>
            </div>
            <div class="border-t border-gray-200">
                <div class="px-4 py-5 sm:p-6">
                    <div class="space-y-4">
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <div class="flex items-center space-x-3 text-sm">
                                <div class="w-2 h-2 bg-blue-600 rounded-full"></div>
                                <span class="text-gray-600">@activity</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>